{
    "version": 2,
    "builds": [
      {
        "src": "src/app.ts",
        "use": "@vercel/node"
      },
      {
        "src": "dist/public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/", "dest": "dist/public/index.html" },
      { "src": "/(.*)", "dest": "/src/app.ts" }
    ]
  }
  